#!/usr/bin/env ruby
# frozen_string_literal: true

require "fileutils"
require "git"

if ARGV.size != 1
  puts "USAGE: dot DIRECTORY"
  exit
end

Git
  .open(ARGV.first)
  .ls_files
  .map(&:first)
  .each do |file|
    homefile = "#{Dir.home}/#{file}"
    File.delete(homefile) if File.exist?(homefile) || File.symlink?(homefile)
    FileUtils.ln_s(File.expand_path(file), homefile, verbose: true)
  end
